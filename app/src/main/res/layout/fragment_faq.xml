<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/faq_0_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_selectable"
                        android:clickable="true"
                        android:drawableEnd="@drawable/down_icon"
                        android:focusable="true"
                        android:text="What is the purpose of this app?"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/faq_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/app_purpose"
                        android:visibility="gone"
                        tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/faq_1_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_selectable"
                        android:clickable="true"
                        android:drawableEnd="@drawable/down_icon"
                        android:focusable="true"
                        android:text="Can I see previous progress of already restarted workouts?"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/faq_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/restart_workout_explanation"
                        android:visibility="gone"
                        tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/faq_2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_selectable"
                        android:clickable="true"
                        android:drawableEnd="@drawable/down_icon"
                        android:focusable="true"
                        android:text="I’m getting a new phone; do I need to transfer my data over to it?"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/faq_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Nope, all data is stored in the cloud!"
                        android:visibility="gone"
                        tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/faq_3_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_selectable"
                        android:clickable="true"
                        android:drawableEnd="@drawable/down_icon"
                        android:focusable="true"
                        android:text="I shared a workout to my friend and then changed it and they didn’t get the changes. What gives?"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/faq_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/share_workout_explanation"
                        android:visibility="gone"
                        tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/faq_4_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_selectable"
                        android:clickable="true"
                        android:drawableEnd="@drawable/down_icon"
                        android:focusable="true"
                        android:text="What are these “default” values in the details page of one of my exercises?"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/faq_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/default_explanation"
                        android:visibility="gone"
                        tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

    <ProgressBar
            android:id="@+id/loading_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:visibility="gone" />

    <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
                android:id="@+id/placeholder_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="false"
                android:src="@drawable/more_icon"
                android:visibility="invisible" />

        <TextView
                android:id="@+id/day_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_toStartOf="@id/day_more_icon"
                android:layout_toEndOf="@id/placeholder_icon"
                android:background="?android:selectableItemBackground"
                android:textAlignment="center"
                android:textSize="36sp"
                tools:text="Week 1 Day 1" />

        <TextView
                android:id="@+id/day_tag_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/day_text_view"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textStyle="italic"
                tools:text="Shoulders Day " />

        <ImageButton
                android:id="@+id/day_more_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/more_icon" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/previous_day_button"
                android:layout_below="@id/day_tag_text_view"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="4dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                tools:listitem="@layout/row_exercise_read_only" />

        <Button
                android:id="@+id/previous_day_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:text="@string/previous_day" />

        <Button
                android:id="@+id/next_day_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:text="@string/next_day" />
    </RelativeLayout>
</RelativeLayout>
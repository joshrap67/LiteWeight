<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/app_logo_image"
                    android:layout_width="185dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/app_logo"
                    app:srcCompat="@mipmap/app_logo_round" />

            <TextView
                    android:id="@+id/version_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:textSize="24sp"
                    tools:text="Version 3.0.0" />

            <TextView
                    android:id="@+id/faq_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="@string/frequently_asked_questions_faq"
                    android:textSize="20sp"
                    app:drawableEndCompat="@drawable/faq_icon" />

            <TextView
                    android:id="@+id/privacy_policy_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="@string/privacy_policy"
                    android:textSize="20sp"
                    app:drawableEndCompat="@drawable/privacy_policy_icon" />

            <TextView
                    android:id="@+id/terms_conditions_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="@string/terms_and_conditions"
                    android:textSize="20sp"
                    app:drawableEndCompat="@drawable/terms_conditions_icon" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
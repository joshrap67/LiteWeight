<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/log_out_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/profile_picture_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="15dp">

                <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_picture_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/profile_picture"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                        app:srcCompat="@drawable/default_profile_picture"
                        app:strokeColor="@color/subtitle_color"
                        app:strokeWidth="1dp" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:contentDescription="@string/profile_picture"
                        app:srcCompat="@drawable/change_profile_picture_icon" />
            </FrameLayout>

            <RelativeLayout
                    android:id="@+id/information_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_picture_container"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/exercise_row_background">

                <LinearLayout
                        android:id="@+id/username_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight=".35"
                            android:padding="8dp"
                            android:text="@string/username"
                            android:textColor="@color/subtitle_color"
                            android:textSize="16sp" />

                    <TextView
                            android:id="@+id/username_tv"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight=".65"
                            android:padding="8dp"
                            android:textSize="16sp"
                            tools:text="greg_egg" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username_layout"
                        android:background="@drawable/bottom_border"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight=".35"
                            android:padding="8dp"
                            android:text="@string/email"
                            android:textColor="@color/subtitle_color"
                            android:textSize="16sp" />

                    <TextView
                            android:id="@+id/email_tv"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight=".65"
                            android:padding="8dp"
                            android:textSize="16sp"
                            tools:text="mikeoxhard@gmail.com" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/password_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email_layout"
                        android:background="@drawable/bottom_border"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight=".35"
                            android:padding="8dp"
                            android:text="@string/password"
                            android:textColor="@color/subtitle_color"
                            android:textSize="16sp" />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight=".65"
                            android:padding="8dp"
                            android:text="@string/pw_placeholder"
                            android:textSize="16sp"
                            app:drawableEndCompat="@drawable/right_icon" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/settings_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/password_layout"
                        android:background="@drawable/bottom_border"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight=".35"
                            android:padding="8dp"
                            android:text="@string/settings"
                            android:textColor="@color/subtitle_color"
                            android:textSize="16sp" />

                    <TextView
                            android:id="@+id/settings_tv"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight=".65"
                            android:padding="8dp"
                            android:textSize="16sp"
                            app:drawableEndCompat="@drawable/right_icon" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
            android:id="@+id/log_out_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/exercise_row_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_border"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/log_out"
                android:textAlignment="center"
                android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/exercise_row_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="6dp">

    <CheckBox
            android:id="@+id/exercise_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/weight_input_layout"
            app:layout_constraintEnd_toStartOf="@id/expand_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:checked="true"
            tools:text="Bicep Curl" />

    <Button
            android:id="@+id/expand_btn"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:background="?android:selectableItemBackground"
            android:drawableEnd="@drawable/small_down_arrow"
            android:paddingHorizontal="2dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/weight_input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/exercise_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12345 lb" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sets_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/sets"
            android:visibility="gone"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@id/details_input_layout"
            app:layout_constraintEnd_toStartOf="@id/weight_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expand_btn"
            tools:style="@style/TextInputLayoutStyle"
            tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sets_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minWidth="75dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                app:autoSizeTextType="uniform" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/weight_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:hint="@string/weight_lbs"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/details_input_layout"
            app:layout_constraintEnd_toStartOf="@id/reps_input_layout"
            app:layout_constraintStart_toEndOf="@id/sets_input_layout"
            app:layout_constraintTop_toBottomOf="@id/expand_btn"
            tools:style="@style/TextInputLayoutStyle"
            tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weight_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                app:autoSizeTextType="uniform" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reps_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/reps"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/details_input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expand_btn"
            tools:style="@style/TextInputLayoutStyle"
            tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reps_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minWidth="75dp"
                android:selectAllOnFocus="true"
                android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/details_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="@string/details"
            android:visibility="gone"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@id/launch_video_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weight_input_layout"
            tools:style="@style/TextInputLayoutStyle"
            tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/details_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:scrollbars="vertical"
                app:autoSizeTextType="uniform" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/launch_video_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:text="@string/watch_video"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_input_layout"
            tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
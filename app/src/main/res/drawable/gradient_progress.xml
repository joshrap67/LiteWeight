<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/workout_progress_background" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                        android:endColor="@color/workout_progress_gradient_end"
                        android:startColor="@color/workout_progress_gradient_start" />
            </shape>
        </clip>
    </item>
</layer-list>

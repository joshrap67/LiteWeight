<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/RoundedButton</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RoundedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="JumpDaysItemStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="RoundedOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/RoundedButton</item>
        <item name="android:textColor">@color/color_default_text</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundedBottomSheetDialog</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/rounded_popup</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="ExtendedFloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="expandedHintEnabled">false</item>

        <item name="boxStrokeColor">@color/text_input_box_color</item>
        <item name="hintTextColor">?attr/colorBoxFocused</item>
        <item name="android:textColorHint">?attr/colorBoxNotFocused</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:popupBackground">?attr/colorOptionsBackground</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">?attr/colorCheckBox</item>
    </style>

</resources>
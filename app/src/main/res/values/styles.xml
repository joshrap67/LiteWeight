<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@android:color/white</item>

        <item name="colorNavItemIconNotSelected">@color/color_accent</item>
        <item name="colorIconButton">@color/color_accent</item>
        <item name="colorDivider">@color/color_divider</item>
        <item name="colorDayCardBackground">@color/color_day_card_background</item>
        <item name="colorDayCardSelectedBackground">@color/color_day_card_selected_background</item>
        <item name="colorExerciseRowBackground">@color/color_exercise_row_background</item>
        <item name="colorExerciseRowSelectedBackground">@color/color_exercise_row_selected_background
        </item>
        <item name="colorWorkoutProgressBackground">@color/color_workout_progress_background</item>
        <item name="colorWorkoutProgressGradientStart">@color/color_workout_progress_gradient_start</item>
        <item name="colorWorkoutProgressGradientEnd">@color/color_workout_progress_gradient_end</item>
        <item name="colorOptionsBackground">@color/color_options_background</item>
        <item name="colorNavItemSelected">@color/color_nav_item_selected</item>
        <item name="colorWeekCardBackground">@color/color_week_card_background</item>
        <item name="colorWeekCardSelectedBackground">@color/color_week_card_selected_background</item>
        <item name="colorSubtitle">@color/color_subtitle</item>
        <item name="colorDefaultText">@color/color_default_text</item>
        <item name="colorHint">@color/color_hint</item>
        <item name="colorControl">@color/color_control</item>
        <item name="colorDangerZone">@color/color_danger_zone</item>
        <item name="colorRowActivated">@color/color_row_activated</item>
        <item name="colorCardBackground">@color/color_exercise_row_background</item>
        <item name="colorToolBarText">@android:color/white</item>
        <item name="colorBoxFocused">@color/color_main_activity_outline_box_focused</item>
        <item name="colorBoxNotFocused">@color/color_main_activity_outline_box_unfocused</item>
        <item name="colorCheckBox">@color/color_accent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textColorPrimary">@color/color_default_text</item>
        <item name="android:textColorSecondary">@color/color_default_text</item>
        <item name="android:textColorTertiary">@color/color_default_text</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:navigationBarColor">@color/color_window_background</item>
        <item name="android:itemBackground">@drawable/item_background_drawable</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <!--        widget styles-->
        <item name="colorControlActivated">@color/color_control</item>
        <item name="android:colorForeground">@color/color_accent</item>

        <item name="android:listDivider">@color/color_divider</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="materialButtonStyle">@style/RoundedButtonStyle</item>
        <item name="android:textCursorDrawable">@null</item>
        <!--  ^ ^ Hack. But for some reason the drawable i had was not working on my phone, would only work on emulator. -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButtonStyle
        </item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="SignInTheme" parent="AppTheme">
        <!-- can't use activity transitions due to this bug. thanks google! https://issuetracker.google.com/issues/112158868 -->
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="materialButtonStyle">@style/RoundedButtonStyle</item>
        <item name="android:windowBackground">@drawable/login_gradient</item>
        <item name="colorBoxFocused">@color/color_login_activity_outline_box_focused</item>
        <item name="colorBoxNotFocused">@color/color_login_activity_outline_box_unfocused</item>
        <item name="colorDivider">@color/color_login_divider</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:colorBackground">@color/color_dialog_window_background</item>
        <item name="dialogCornerRadius">6dp</item>
        <item name="colorPrimary">@color/color_control</item>
    </style>
</resources>
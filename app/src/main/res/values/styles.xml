<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        <item name="android:itemBackground">@color/options_background</item>-->

        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textColorPrimary">@color/defaultTextColor</item>
        <item name="android:textColorSecondary">@color/defaultTextColor</item>
        <item name="android:textColorTertiary">@color/defaultTextColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:navigationBarColor">@color/window_background</item>
        <item name="android:itemBackground">@drawable/item_background_drawable</item>

        <!--        widget styles-->
        <item name="colorControlActivated">@color/color_control</item>
        <item name="android:colorForeground">@color/colorAccent</item>

        <item name="android:listDivider">@color/divider_color</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="SignInTheme" parent="AppTheme">
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorError">@color/error</item>
        <item name="textInputStyle">@style/SignInTextInputLayoutStyle</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="expandedHintEnabled">false</item>

        <item name="boxStrokeColor">@color/workout_activity_box_color</item>
        <item name="hintTextColor">@color/workout_activity_outline_box_focused_color</item>
        <item name="android:textColorHint">@color/workout_activity_outline_box_unfocused_color
        </item>
    </style>

    <style name="SignInTextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="expandedHintEnabled">false</item>

        <item name="boxStrokeColor">@color/signin_activity_box_color</item>
        <item name="hintTextColor">@color/signin_activity_outline_box_focused_color</item>
        <item name="android:textColorHint">@color/signin_activity_outline_box_unfocused_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:navigationBarColor">@color/window_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.MaterialComponents">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:popupBackground">@color/options_background</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/dialog_window_background</item>
        <item name="colorPrimary">@color/color_control</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="JumpDaysItemStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundedBottomSheetDialog</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/rounded_popup</item>
    </style>


    <style name="RoundedBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>